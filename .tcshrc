setenv TERM screen-256color
set host=`hostname`
set autolist=ambiguous
set color
set filec
set nobeep
set complete=enhance
set savehist = 1500
set history = 1500
set histdup = erase
set histfile = ~/.tcsh_history
set noclobber
set rmstar
set listjobs=long
set notify
bindkey ^I  complete-word-fwd
bindkey ^[[Z  complete-word-back
bindkey ^N 	history-search-forward
bindkey ^P 	history-search-backward
bindkey ^R i-search-back
set rmstar
set tperiod=1
set correct=all
set path = ($path ~/.fzf/bin)
setenv LESS '-i -M -R'

alias reload 'source ~/.tcshrc'
alias ls 'ls -F --color=always '
alias la 'ls -a '
alias ll 'la -thl --time-style=+"%Y/%m/%d %H:%M:%S"'
alias sl 'ls -F --color=always '
alias cd.. 'cd ..'
alias cd../ 'cd ../'
alias tree 'tree -C'

set savehist = 1000
set history = 10000
if ( ! -e ~/.tcsh_history) then
  touch ~/.tcsh_history
endif
set histfile = ~/.tcsh_history
set autolist = ambiguous
set complete = enhance
bindkey ^I  complete-word-fwd
bindkey ^[[Z  complete-word-back
set filec
set nobeep
set listjobs = long
set rmstar
set fignore =( .o .log .dvi .aux .tex~ )
set tperiod = 1
set correct = all
set color
set path = ($path ~/.fzf/bin)

bindkey ^N 	history-search-forward
bindkey ^P 	history-search-backward
alias vimrc 'vim ~/.vimrc'
alias tcshrc 'vim ~/.tcshrc'
alias tmuxconf 'vim ~/.tmux.conf'

alias ta 'tmux a -t'
alias taa 'tmux a'
alias tls 'tmux ls'
alias tn 'tmux new -s'
alias tkill 'tmux kill-session -t'
alias tkillall 'tmux kill-server'

alias fd 'set dir=`find . -type d -name "*.git" -prune -o -type d -print |& fzf +m`; if ("$dir" != "") cd "$dir"'
alias fv 'set file=`find . -type f | fzf` && vim "$file"'
alias fh 'set fzfcmd=`history -h | sort | uniq | tac |  fzf` && eval "$fzfcmd"'

complete xdvi 'n/*/f:*.dvi/'
complete alias    'p/1/a/'            # complete aliases
complete set      'p/1/s/'            # complete variables
complete tgif	'n/*/f:*.obj/'
complete printenv 'p/1/e/'
complete cd      'p/1/d/'
complete pu      'p/1/d/'
complete setenv		'p/1/e/'
complete unsetenv		'p/1/e/'

source /home/vlsi/.cshrc-common
set prompt = "%{\033[01;38;5;156m%}%n@%m %{\033[01;38;5;81m%}[%P] %{\033[0m%}[%~]\n%{\033[01;38;5;81m%}->%{\033[0m%} "
