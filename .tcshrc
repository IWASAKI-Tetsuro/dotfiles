# enviroment value
setenv LESS '-i -M -R -Q -F -X'
setenv TERM screen-256color

# complete
set filec
set autolist=ambiguous
set complete=enhance
set correct=all
set autocorrect
set listjobs=long
bindkey ^I  complete-word-fwd
bindkey ^[[Z  complete-word-back

# history
if ( ! -e ~/.cd_history) then
  touch ~/.cd_history
endif
set histfile = ~/.tcsh_history
set history = 10000
set savehist = (10000 merge)
set histdup = erase
bindkey ^N  history-search-forward
bindkey ^P  history-search-backward
bindkey ^R i-search-back

# other
set color
set fignore =( .o .log .dvi .aux .tex~ )
set host=`hostname`
set nobeep
set noclobber
set notify
set path = ($path ~/.fzf/bin)
set rmstar
set tperiod=1

alias reload 'source ~/.tcshrc'

alias cd.. 'cd ..'
alias cd../ 'cd ../'
alias cd. 'cd ../'
alias cd./ 'cd ../'
alias cd,, 'cd ..'
alias cd,,/ 'cd ../'
alias cd, 'cd ../'
alias cd,/ 'cd ../'
alias cd- 'cd -'
alias ls 'ls -F --color=auto --group-directories-first'
alias ll 'ls -thl --time-style=+"%Y/%m/%d %H:%M:%S"'
alias la 'll -a'
alias sl 'ls'
alias ks 'ls'
alias les 'less'
alias mv 'mv -i'
alias cp 'cp -i'

alias tree 'tree -C'
alias grep 'grep --color=auto'
alias fgrep 'fgrep --color=auto'
alias egrep 'egrep --color=auto'

alias vim. 'vim ./'
alias vimrc 'vim ~/.vimrc'
alias tcshrc 'vim ~/.tcshrc'
alias gitconfig 'vim ~/.gitconfig'
alias tmuxconf 'vim ~/.tmux.conf'
alias tmuxconf 'vim ~/.gitconfig'
alias ta 'tmux a -t'
alias taa 'tmux a'
alias tls 'tmux ls'
alias tn 'tmux new -s'
alias tkill 'tmux kill-session -t'
alias tkillall 'tmux kill-server'

alias fd 'set dir=`find . -type d -name "*.git" -prune -o -type d -print |& fzf +m`; if ("$dir" != "") cd "$dir"'
alias fh 'set fzfcmd=`history -h | sort | uniq |  fzf` && eval "$fzfcmd"'

complete xdvi 'n/*/f:*.dvi/'
complete alias    'p/1/a/'            # complete aliases
complete set      'p/1/s/'            # complete variables
complete tgif 'n/*/f:*.obj/'
complete printenv 'p/1/e/'
complete cd      'p/1/d/'
complete pu      'p/1/d/'
complete setenv 'p/1/e/'
complete unsetenv 'p/1/e/'

source /home/vlsi/.cshrc-common
set prompt = "%{\e[32m%}%n@%m %{\e[01;34m%}[%P] %{\e[0m%}[%~]\n%{\e[01;34m%}-> %%%{\e[0m%} "
